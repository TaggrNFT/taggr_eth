{
  "name": "@TaggrNFT/core",
  "version": "1.0.0",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "nft",
    "non-fungible",
    "nfc"
  ],
  "engines": {
    "node": ">=14.18.3",
    "npm": ">=6.14.15"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules && rm -f yarn.lock && yarn clean && yarn",
    "clean": "rm -rf build cache coverage coverage.json test-results.xml",
    "clean-deployed": "rm -rf abis && rm -f .openzeppelin/unknown-31337.json && rm -f .openzeppelin/goerli.json",
    "clean-test": "rm -rf abis .openzeppelin/${npm_config_network:-'unknown-31337'}.json deployments/${npm_config_network:-hardhat}/*.json test-results.xml",
    "compile": "hardhat --show-stack-traces --max-memory 8192 compile",
    "test": "yarn compile && hardhat test",
    "watch-test": "hardhat watch test",
    "hint": "eslint '**/*.js' && solhint 'contracts/**/*.sol'",
    "coverage": "yarn clean-test && yarn compile && hardhat --show-stack-traces coverage --temp coverage_build && yarn clean-test",
    "gas": "REPORT_GAS=true hardhat test",
    "start": "hardhat node --port 8545",
    "deploy-core": "yarn clean-test && hardhat deploy --tags core --network",
    "deploy-setup": "yarn clean-test && hardhat deploy --tags setup --network",
    "create-accounts": "hardhat deploy --tags accounts --network",
    "mint-usdc": "hardhat deploy --tags mintusdc --network",
    "mint-pass": "hardhat deploy --tags freemintpass --network",
    "merkle": "hardhat deploy --tags merkle --network",
    "etherscan-verify": "hardhat deploy --tags verify --network",
    "gen-docs": "solidity-docgen -i contracts -o docs"
  },
  "devDependencies": {
    "@charged-particles/erc721i": "^0.1.4",
    "@defi-wonderland/smock": "^2.2.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/contracts": "^4.7.0",
    "@openzeppelin/contracts-upgradeable": "^4.7.0",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "chai": "^4.3.6",
    "chalk": "^5.0.1",
    "dateformat": "^5.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.9.9",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-deploy": "^0.11.12",
    "hardhat-gas-reporter": "^1.0.8",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "sleep-promise": "^9.1.0",
    "solc": "0.8.4",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.6.0-beta.18"
  },
  "dependencies": {
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.2.32"
  }
}
